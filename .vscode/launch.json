{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watch Express",
            "command": "npm run watch",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Express",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public"
        }
    ],
    "compounds": [
        {
            "name": "Debug App",
            "configurations": [
                "Watch Express",
                "Launch Edge"
            ]
        }
    ]
}